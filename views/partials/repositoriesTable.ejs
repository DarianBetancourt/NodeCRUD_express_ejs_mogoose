<table class="table table-striped table-hover" >
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Link</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      
      <% repositories.forEach((repository,index) => { %>
        <tr>
          <th scope="row">
            <a style="text-decoration: none;" href="/api/repositories/<%= repository.id %>"><%= index+1 %></a>
          </th>
          <td>
            <a style="color:black; text-decoration: none;" href="/api/repositories/<%= repository.id %>"><%= repository.title %></a>
          </td>
          <td>
            <a style="color:black; text-decoration: none;" href="/api/repositories/<%= repository.id %>"><%= repository.description %></a>
          </td>
          <td>
            <a class="btn btn-warning" href="<%= repository.url %>">Link</a>
          </td>
          <td style="display : flex;">
            <a class="btn btn-primary" href="/api/repositories/edit/<%=repository.id%>">Edit</a> 
              <form style="margin-left:5px;" action="/api/repositories/<%=repository.id%>?_method=DELETE" method="POST" class="d-inline">
                <button  type="submit" class="btn btn-danger">Delete</button>
              </form>
          </td>
          
        </tr>
        
     <% }) %>
    </tbody>
  </table>